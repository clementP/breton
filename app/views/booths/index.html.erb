<%- model_class = Booth -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:pays) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @booths.each do |booth| %>
      <tr>
        <td><%= link_to booth.id, booth_path(booth) %></td>
        <td><%= booth.nom %></td>
        <td><%= booth.pays %></td>
        <td><%= booth.description %></td>
        <td><%=l booth.created_at %></td>

        <td>
          <% if can? :update, booth %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_booth_path(booth), :class => 'btn btn-mini' %>
          <% end %>
           <% if can? :destroy, booth %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      booth_path(booth),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_booth_path,
            :class => 'btn btn-primary' %>

